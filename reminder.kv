<Reminder>:
    orientation: "vertical"
    padding: 20
    spacing: 20

    Button:
        id: start_btn
        text: "Запустить напоминания"
        font_size: 24
        on_press: root.start_timer()

    Button:
        id: stop_btn
        text: "Остановить"
        font_size: 24
        on_press: root.stop_timer()